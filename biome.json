{
	"$schema": "https://biomejs.dev/schemas/1.4.1/schema.json",
	"organizeImports": {
		"enabled": true
	},
	"formatter": {
		"lineWidth": 100,
		"indentStyle": "tab",
		"indentWidth": 1
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"suspicious": {
				"noArrayIndexKey": "off"
			},
			"complexity": {
				"noUselessFragments": "off"
			}
		}
	},
	"files": {
		"ignore": ["**/node_modules/*", "**/dist/*", "**/.astro/*"]
	}
}
