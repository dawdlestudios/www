---
import "./bg.css";
---

<div transition:persist id="backgroundcontainer" class="bg"></div>

<script>
  // for some reason, css keyframes reset when the element is moved to the next page AaaAAAAA ðŸ¤¬
  // so we have to do it in js (HOW IS THERE A DIFFERENCE BETWEEN CSS AND JS KEYFRAMES???)
  // ... L

  const bg = document.getElementById("backgroundcontainer");
  const keyframes = [
    { backgroundPosition: "0 0" },
    { backgroundPosition: "-1920px 0" },
  ];
  const options = {
    duration: 60000,
    iterations: Infinity,
    easing: "linear",
  };

  bg!.animate(keyframes, options);
</script>

<style>
  .bg {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    z-index: -1;
    background-color: #050a0e;
    background-image: url("/bg.jpg");
    background-blend-mode: color-dodge;
  }
</style>
