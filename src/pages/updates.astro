---
import Layout from "../layouts/Layout.astro";

const updates = [
  {
    text: `A new beginning! The original site has been retired and replaced with this new one. We now have a custom backend allowing users to create their own sites, and a new design.`,
    date: "Dec 31, 2023",
  },
  {
    text: `The original dawdle.space was launched`,
    date: "Mar 30, 2022",
  },
];
---

<Layout title="Sites">
  <main>
    <h1>Updates</h1>
    <ul>
      {
        updates.map((update) => (
          <li>
            <span style="color: #8a8ed9;"> ({update.date})</span>
            <p>
              <span style="color: #54827b;">>>></span>
              {update.text}
            </p>
          </li>
        ))
      }
    </ul>

    <style>
      ul {
        margin: 0;
        padding: 0;
        list-style: none;
        margin-bottom: 1rem;

        li {
          margin-bottom: 1rem;
        }
      }

      h1 {
        margin-top: 1rem;
        margin-bottom: 0.5rem;
      }

      main {
        padding: 1rem;
        height: fit-content;
        display: flex;
        flex-direction: column;
        flex: 1;
        justify-content: center;
        margin: 0 auto;
        width: 100%;
        max-width: 40rem;
      }
    </style>
  </main>
</Layout>
