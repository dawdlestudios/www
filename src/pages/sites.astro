---
import Layout from "../layouts/Layout.astro";

const members = [
  {
    name: "henry",
  },
];

const projects = [
  {
    name: "lastfm iceberg chart generator",
    url: "https://lastfm-iceberg.dawdle.space",
    by: "henry",
  },
  {
    name: "cringe.cc (url shortener)",
    url: "https://cringe.cc",
    by: "henry",
  },
];
---

<Layout title="Sites">
  <main>
    <h1>Members</h1>
    <ul>
      {
        members.map((member) => (
          <li>
            >>
            <a
              href={`https://{member.name}.dawdle.space`}
            >{`~${member.name}`}</a>
          </li>
        ))
      }
    </ul>

    <h1>Projects</h1>

    <ul>
      {
        projects.map((project) => (
          <li>
            >>
            <a href={project.url}>{`${project.name}`}</a>
            <span style="color: #999;">
              {" "}
              by
              <a
                href={`https://${project.by}.dawdle.space`}
              >{`~${project.by}`}</a>
            </span>
          </li>
        ))
      }

      <style>
        ul {
          margin: 0;
          padding: 0;
          list-style: none;
          margin-bottom: 1rem;
        }

        h1 {
          margin-top: 1rem;
          margin-bottom: 0.5rem;
        }

        main {
          padding: 1rem;
          height: fit-content;
          display: flex;
          flex-direction: column;
          flex: 1;
          justify-content: center;
          margin: 0 auto;
          width: 100%;
          max-width: 40rem;
        }
      </style>
    </ul>
  </main>
</Layout>
