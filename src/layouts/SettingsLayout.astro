---
import Layout from "./Layout.astro";

interface Props {
  title: string;
}
const { title } = Astro.props;
---

<Layout title={title}>
  <main>
    <h2>Welcome (user)!</h2>
  </main>
  <ul>
    <li data-active><a href="/user">Your Files</a></li>
  </ul>
  <slot />
</Layout>

<style>
  main {
    background: #141f28;
    padding: 2rem;
  }

  ul {
    display: flex;
    list-style: none;
    padding: 0;
    margin: 0;
    border-bottom: 1px solid #fff;
    border-top: 1px solid #fff;

    li {
      padding: 0.5rem 0;
      border-right: 1px solid #fff;
      font-size: 0.8rem;

      a {
        padding: 0 1.2rem;
        color: #fff;
      }
    }
  }
</style>
