---
import "@fontsource-variable/victor-mono";
import "./../global.css";
import { Head } from "astro-capo";
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <Head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </Head>
  <body>
    <header>
      <h1>dawdle.space</h1>
      <div class="online">
        <span>{0}</span> users connected
      </div>
    </header>
    <ul class="tabs">
      <li data-active><a href="/">home</a></li>
      <li><a href="/sites">sites</a></li>
      <li><a href="/wiki">wiki</a></li>
      <li><a href="/chat">chat</a></li>
      <li><a href="/join">join</a></li>
    </ul>
    <div class="page">
      <slot />
    </div>
    <div class="footer">
      <a href="https://henry.dawdle.space">made by ~henry</a>
      <a href="/contact">contact</a>
      <a href="/imprint">imprint</a>
      <a href="/privacy">privacy</a>
      <a href="/rules">rules</a>
    </div>
    <style>
      .footer {
        letter-spacing: -1px;
        margin-top: 0.5rem;
        a {
          color: #54827b;
          margin-right: 0.5rem;

          &:first-of-type {
            color: #19c4da;
          }
        }
      }

      .tabs {
        background: #080f14;
        display: flex;
        list-style: none;
        padding: 0;
        margin: 0;
        border: 1px solid #fff;
        border-bottom: none;

        li a {
          padding: 0 1.2rem;
          color: #54827b;
          font-weight: 400;

          &:hover {
            color: #fff;
          }
        }

        li {
          &[data-active] {
            background: #ffffff;
            a {
              color: #000000;
            }
          }

          padding: 0.5rem 0;
          border-right: 1px solid #fff;
        }

        li:last-of-type {
          margin-left: auto;
          border-right: none;
        }

        @media (max-width: 600px) {
          justify-content: space-evenly;
          padding: 0.4rem;

          li {
            a {
              padding: 1rem 0.5rem;
            }

            border-right: none;
            margin: 0;
            /* border-bottom: 1px solid #fff; */
            &:last-of-type {
              margin-left: 0;
            }
          }
        }
      }

      @keyframes slide {
        from {
          background-position: 0 0;
        }
        to {
          background-position: -1920px 0;
        }
      }

      html {
        /* lightly transparent background */

        font-family: "Victor Mono Variable", monospace;
        background: #080f14;
        color: #fff;
        background-size: 224px;
        margin: 0;
        padding: 0;
        padding: 2rem;
        height: 100vh;
        height: 100dvh;
        box-sizing: border-box;
        display: flex;
        justify-content: center;

        background-image: url("./bg.jpg");
        background-size: 1920px auto;
        background-position: center;
        background-blend-mode: color-dodge;
        background-repeat: repeat;
        animation: slide 60s linear infinite;

        @media (max-width: 600px) {
          padding: 1rem 2rem;
        }
      }

      :global(a) {
        color: #8be2ff;
        text-decoration: none;
        transition: color 0.1s ease-in-out;
      }

      header {
        display: flex;
        padding-bottom: 0.8rem;
        align-items: baseline;
        gap: 0.5rem;

        .x {
          width: 1rem;
          height: 1rem;
          font-size: 2.5rem;
          line-height: 1;
          color: #ececec;
        }

        .online {
          color: #54827b;
        }

        h1 {
          font-size: 1.5rem;
          margin: 0;
          margin-right: auto;
          padding: 0;
          color: #ffffff;
        }
      }

      .page {
        flex-direction: column;
        background: #080f14;
        overflow: auto;
        display: flex;
        border: 1px solid #fff;
        flex: 1;
        color: #ddfffa;
        h1,
        h2,
        h3 {
          color: #54827b;
        }
      }

      body {
        max-width: 800px;
        flex: 1;
        display: flex;
        margin: 0;
        padding: 0;
        font-size: 1rem;
        line-height: 1.5;
        flex-direction: column;
      }
    </style>
  </body>
</html>
