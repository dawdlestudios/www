---
import BG from "../components/BG.astro";
import Base from "../layouts/Base.astro";
interface Props {
  title: string;
  maxWidth?: string;
}
const props = Astro.props;
const url = new URL(Astro.request.url);
---

<Base {...props}>
  <slot name="head" slot="head" />

  <BG />
  <header>
    <h1>dawdle.space</h1>
    <div class="online">
      <span>{0}</span> users connected
    </div>
  </header>
  <ul class="tabs">
    <li data-active={url.pathname === "/"}>
      <a href="/">home</a>
    </li>
    <li data-active={url.pathname === "/sites"}>
      <a href="/sites">sites</a>
    </li>
    <li data-active={url.pathname.startsWith("/wiki")}>
      <a href="/wiki">wiki</a>
    </li>
    <li data-active={url.pathname.startsWith("/chat")}>
      <a href="/chat">chat</a>
    </li>
    <li id="nav-join" transition:persist>
      <a href="/join">join</a>
    </li>
  </ul>
  <div class="page" transition:animate="none">
    <slot />
  </div>
  <div class="footer">
    <a href="https://henry.dawdle.space">made by ~henry</a>
    <a href="/contact">contact</a>
    <a href="/imprint">imprint</a>
    <a href="/privacy">privacy</a>
    <a href="/terms">terms</a>
  </div>
</Base>

<script>
  import { getUser } from "../utils/auth";
  const username = getUser();
  if (username) {
    const el = document.querySelector("#nav-join a") as HTMLAnchorElement;
    el.textContent = username;
    el.href = "/user";
  }
</script>

<style>
  .footer {
    padding-bottom: 1rem;
    letter-spacing: -1px;
    margin-top: 0.5rem;
    a {
      color: #54827b;
      margin-right: 0.5rem;

      &:first-of-type {
        color: #19c4da;
      }
    }
  }

  .tabs {
    background: #080f14;
    display: flex;
    list-style: none;
    padding: 0;
    margin: 0;
    border: 1px solid #fff;
    border-bottom: none;

    li a {
      padding: 0 1.2rem;
      color: #54827b;
      font-weight: 400;
      text-decoration: none;

      &:hover {
        color: #fff;
      }
    }

    li {
      &[data-active] {
        background: #ffffff;
        a {
          color: #000000;
        }
      }

      padding: 0.5rem 0;
      border-right: 1px solid #fff;
    }

    li:last-of-type {
      margin-left: auto;
      border-right: none;
    }

    @media (max-width: 600px) {
      justify-content: space-around;
      min-width: 100%;
      max-width: calc(100vw - 2rem);

      li {
        text-align: center;
        flex: 1;
        border-right: none;
        margin: 0;
        &:last-of-type {
          margin-left: 0;
        }
      }
    }
  }

  html {
    background-size: 224px;
    padding: 2rem !important;
    justify-content: center;
    @media (max-width: 600px) {
      padding: 1rem 2rem;
    }
  }

  header {
    display: flex;
    padding-bottom: 0.8rem;
    align-items: baseline;
    gap: 0.5rem;

    .x {
      width: 1rem;
      height: 1rem;
      font-size: 2.5rem;
      line-height: 1;
      color: #ececec;
    }

    .online {
      color: #54827b;
    }

    h1 {
      font-size: 1.5rem;
      margin: 0;
      margin-right: auto;
      padding: 0;
      color: #ffffff;
    }
  }

  .page {
    flex-direction: column;
    background: #080f14;
    display: flex;
    border: 1px solid #fff;
    flex: 1;
    color: #ddfffa;
    h1,
    h2,
    h3 {
      color: #54827b;
    }
  }

  body {
    max-width: var(--max-width, 800px);
    flex: 1;
    display: flex;
    margin: 0;
    padding: 0;
    font-size: 1rem;
    line-height: 1.5;
    flex-direction: column;
  }
</style>
